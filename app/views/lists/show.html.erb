
<p id="notice"><%= notice %></p>
<div class='container'>
  
    <p>
      <strong>Title:</strong>
      <%= @list.title %>
    </p> 
  
    <p>
      <strong>Description:</strong>
      <%= @list.description %>
   
    </p>
  
    <table class='table table-hover'>

      <div class='items_wrapper'>
        <tr>
          <th>Description</th>
          <th>Days Left</th>
          <th>Complete</th>
        </tr>
        <% @list.items.each do |item| %>
        <tr>        
          <td><%= item.content %> </td>
          <td><%= item.days_left %> </td>
          <td><%= link_to "", [@list, item], method: :delete, class: 'glyphicon glyphicon-ok' %> </td>                
        </tr>
        <% end %>
        
      </div>
  </table>
  <div class='form-group'>
                    <%= render "items/form" %>
        </div>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
</div>
<h1>My lists</h1>
<div class='media'>
<div class='media-body'>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.title %></td>
          <td><%= list.description %></td>
          <td><%= link_to ' Show', list, class: 'glyphicon glyphicon-eye-open' %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to '', list, method: :delete, class: 'glyphicon glyphicon-trash', data: { confirm: 'Are you sure?' } %></td>


        </tr>
      <% end %>

    </tbody>
  </table>
  </div>
</div>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>
